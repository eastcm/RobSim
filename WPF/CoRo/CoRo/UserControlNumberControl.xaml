<UserControl x:Class="CoRo.UserControlNumberControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoRo"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="50">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition Width="15"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button x:Name="buttonMinus" Grid.Column="0" Content="3" Height ="20" Width="20" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Marlett" FontSize="20" Foreground="Gray" Background="Transparent" BorderThickness="0" Click="buttonMinus_Click"/>
        <Label x:Name="labelValue" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Margin="0,0,0,5">1</Label>
        <Button x:Name="buttonPlus" Grid.Column="2" Content="4" Height ="20" Width="20" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Marlett" FontSize="20" Foreground="Gray" Background="Transparent" BorderThickness="0" Click="buttonPlus_Click"/>

    </Grid>
</UserControl>
