<UserControl x:Class="CoRo.UserControlButtonModifierSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoRo"
             mc:Ignorable="d" Height="30" Width="194" >
    <Grid Margin="2,2,2,2">
        <DockPanel HorizontalAlignment="Left" Height="30" LastChildFill="False" VerticalAlignment="Top" Width="209" Margin="0,0,0,-4">
            <Label Content="{Binding Path=Label}" Height="26" VerticalAlignment="Top" Width="30"/>
            <Button x:Name="button" Content="{Binding Path=ButtonText}" Height="26" VerticalAlignment="Top" Width="30" Click="button_Click"/>
            <GridSplitter Background="White" Height="2" VerticalAlignment="Top" Width="5"/>
            <Slider Height="26" VerticalAlignment="Top" Width="120"/>
        </DockPanel>
    </Grid>
</UserControl>
