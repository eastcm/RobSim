<UserControl x:Class="CoRo.UserControlConnectionButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoRo"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="30">
    <Grid>
        <Button x:Name="buttonConnect" Height="30" Width="30" Background="Transparent" BorderBrush="LightGray" Click="buttonConnect_Click">
            <Image x:Name="icon" Source="./Resources/connectionicon_black.png" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="5,5,5,5"/>
        </Button>
    </Grid>
</UserControl>
